{
  "apps": [
    {
      "name": "email-api-with-imap-idle",
      "script": "./app.js",
      "cwd": ".",
      "instances": 1,
      "exec_mode": "cluster",
      "watch": false,
      "ignore_watch": ["node_modules", "uploads", "logs"],
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "log_file": "./logs/email-api-imap.log",
      "out_file": "./logs/email-api-imap-out.log",
      "error_file": "./logs/email-api-imap-error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "max_memory_restart": "500M",
      "node_args": "--max-old-space-size=512"
    }
  ]
}
